{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "typedocOptions": {
    "name": "Robot Snake Game",
    "entryPoints": ["src"],
    "entryPointStrategy": "expand",
    "out": "docs",
    "readme": "none"
  }
}
